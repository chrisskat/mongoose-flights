<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <title>Mongoose Flights</title>
</head>
<body>
  <h1>Flight List</h1>
  <table>
    <thead>
      <tr>
        <th>Airline</th>
        <th>Flight Number</th>
        <th>Airport</th>
        <th>Departs</th>
        <th>Now Flying</th>
      </tr>
    </thead>
    <tbody>
      <!-- Write the line of EJS to iterate over movies using forEach -->
      <% flights.forEach(function(m){ %>
        <tr>
          <td><%= m.airline %></td>
          <td><%= m.flightNo %></td>
          <td><%= m.airport %></td>
          <td><%= m.departs %></td>
          <td><%= m.nowFlying ? 'Yes' : 'No' %></td>
          <td><a href="/flights/<%= m._id %>">Destination Details</a></td>
        </tr>
      <!-- Close the forEach using EJS here -->
      <% }) %>
    </tbody>
  </table>
</body>
</html>
